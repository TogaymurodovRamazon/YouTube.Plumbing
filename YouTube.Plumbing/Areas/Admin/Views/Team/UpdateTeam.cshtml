@model TeamUpdateVM
@{
    ViewData["Title"] = "UpdateTeam";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div>
    <h5 class="card-title">Update Team Member</h5>

    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Team" asp-action="GetTeamList">Our Team</a></li>
            <li class="breadcrumb-item active">Update</li>
        </ol>
    </nav>
</div>


<!-- Card with an image on top -->
<div class="card">
    <img src="~/Admin/assets/img/card.jpg" class="card-img-top" alt="...">
    
</div><!-- End Card with an image on top -->

<div class="card">
    <div class="card-body">

        <!-- Floating Labels Form -->
        <form asp-area="Admin" asp-controller="Team" asp-action="UpdateTeam" method="post" class="row g-3" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" value="test" />
            <input type="hidden" asp-for="RowVersion" value="test" />
            <input type="hidden" asp-for="FileName" value="test" />
            <input type="hidden" asp-for="FileType" value="test" />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-md-12">
                <div class="form-floating">
                    <input asp-for="FullName" type="text" class="form-control" placeholder="FullName">
                    <label asp-for="FullName">FullName</label>

                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-floating">
                    <input asp-for="Title" type="text" class="form-control" placeholder="Title">
                    <label asp-for="Title">Title</label>

                    <span asp-validation-for="Title" class="text-danger"></span>

                </div>
            </div>
            <div class="col-md-3">
                <div class="form-floating">
                    <input asp-for="Twitter" type="text" class="form-control" placeholder="Twitter">
                    <label asp-for="Twitter">Twitter</label>

                    <span asp-validation-for="Twitter" class="text-danger"></span>

                </div>
            </div>
            <div class="col-md-3">
                <div class="form-floating">
                    <input asp-for="Faceboook" type="text" class="form-control" placeholder="FaceBook">
                    <label asp-for="Faceboook">FaceBook</label>

                    <span asp-validation-for="Faceboook" class="text-danger"></span>

                </div>
            </div>
            <div class="col-md-3">
                <div class="form-floating">
                    <input asp-for="Instagram" type="text" class="form-control" placeholder="Instagram">
                    <label asp-for="Instagram">Instagram</label>

                    <span asp-validation-for="Instagram" class="text-danger"></span>

                </div>
            </div>
            <div class="col-md-3">
                <div class="form-floating">
                    <input asp-for="Linkedin" type="text" class="form-control" placeholder="LinkedIn">
                    <label asp-for="Linkedin">LinkedIn</label>

                    <span asp-validation-for="Linkedin" class="text-danger"></span>

                </div>
            </div>
            <div class="col-md-12">
                <div class="form-floating">
                    <input asp-for="Photo" accept="image/*" type="file" class="form-control" placeholder="Photo">
                </div>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary">Submit</button>
                <button type="reset" class="btn btn-secondary">Reset</button>
            </div>
        </form><!-- End floating Labels Form -->

    </div>
</div>

