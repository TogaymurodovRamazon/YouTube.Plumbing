
@model AboutAddVM
@{
    ViewData["Title"] = "AddAbout";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div>
<h5 class="card-title">Add New About Us</h5>

<nav>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
        <li class="breadcrumb-item"><a href="#">About Us</a></li>
        <li class="breadcrumb-item active">Add</li>
    </ol>
</nav>
</div>

 <div class="card">
            <div class="card-body">

              <!-- Floating Labels Form -->
              <form asp-area="Admin" asp-controller="About" asp-action="AddAbout" method="post" class="row g-3" enctype="multipart/form-data">
                  <input type="hidden" asp-for="FileName" value="test" />
                  <input type="hidden" asp-for="FileType" value="test" />
                <div class="col-md-12">
                  <div class="form-floating">
                    <input asp-for="Header" type="text" class="form-control" placeholder="Header">
                    <label asp-for="Header">Header</label>
                  </div>
                </div>
                <div class="col-md-12">
                  <div class="form-floating">
                    <textarea asp-for="Description" type="text" class="form-control" placeholder="Description"></textarea>
                    <label asp-for="Description">Description</label>
                  </div>
                </div>
                <div class="col-md-3">
                  <div class="form-floating">
                    <input asp-for="Clients" type="number" class="form-control" placeholder="Clients">
                    <label asp-for="Clients">Clients</label>
                  </div>
                </div>
            <div class="col-md-3">
                <div class="form-floating">
                    <input asp-for="HoursOfSupport" type="number" class="form-control" placeholder="Hours Of Support">
                    <label asp-for="HoursOfSupport">Hours Of Support</label>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-floating">
                    <input asp-for="HardWorkers" type="number" class="form-control" placeholder="HardWorkers">
                    <label asp-for="HardWorkers">HardWorkers</label>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-floating">
                    <input asp-for="Projects" type="number" class="form-control" placeholder="Projects">
                    <label asp-for="Projects">Projects</label>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-floating">
                    <input asp-for="SocialMedia.Twitter" type="text" class="form-control" placeholder="Twitter">
                    <label asp-for="SocialMedia.Twitter">Twitter</label>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-floating">
                    <input asp-for="SocialMedia.Faceboook" type="text" class="form-control" placeholder="FaceBook">
                    <label asp-for="SocialMedia.Faceboook">FaceBook</label>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-floating">
                    <input asp-for="SocialMedia.Instagram" type="text" class="form-control" placeholder="Instagram">
                    <label asp-for="SocialMedia.Instagram">Instagram</label>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-floating">
                    <input asp-for="SocialMedia.LinkedIn" type="text" class="form-control" placeholder="LinkedIn">
                    <label asp-for="SocialMedia.LinkedIn">LinkedIn</label>
                </div>
            </div>
                
            <div class="col-md-12">
                <div class="form-floating">
                    <input asp-for="Photo" accept="image/*" type="file" class="form-control" placeholder="Photo">
                </div>
            </div>


                <div class="text-center">
                  <button type="submit" class="btn btn-primary">Submit</button>
                  <button type="reset" class="btn btn-secondary">Reset</button>
                </div>
              </form><!-- End floating Labels Form -->

            </div>
          </div>

