@model HomePageAddVM
@{
    ViewData["Title"] = "AddHomePage";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div>
    <h5 class="card-title">Add New Home Page</h5>

    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="HomePage" asp-action="GetHomePagetList">Home Page</a></li>
            <li class="breadcrumb-item active">Add</li>
        </ol>
    </nav>
</div>

<div class="card">
    <div class="card-body">

        <!-- Floating Labels Form -->
        <form asp-area="Admin" asp-controller="HomePage" asp-action="AddHomePage" method="post" class="row g-3">
            <div class="col-md-12">
                <div class="form-floating">
                    <input asp-for="Header" type="text" class="form-control" placeholder="Header">
                    <label asp-for="Header">Location</label>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-floating">
                    <input asp-for="Description" type="text" class="form-control" placeholder="Description">
                    <label asp-for="Description">Description</label>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-floating">
                    <input asp-for="VideoLink" type="text" class="form-control" placeholder="Video Link">
                    <label asp-for="VideoLink">Video Link</label>
                </div>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary">Submit</button>
                <button type="reset" class="btn btn-secondary">Reset</button>
            </div>
        </form><!-- End floating Labels Form -->

    </div>
</div>


