@model PortfolioAddVM
@{
    ViewData["Title"] = "AddPortfolio";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div>
    <h5 class="card-title">Add New Portfolio</h5>

    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Portfolio" asp-action="GetPortfolioList">Portfolio</a></li>
            <li class="breadcrumb-item active">Add</li>
        </ol>
    </nav>
</div>

<div class="card">
    <div class="card-body">

        <!-- Floating Labels Form -->
        <form asp-area="Admin" asp-controller="Portfolio" asp-action="AddPortfolio" method="post" class="row g-3" enctype="multipart/form-data">
            <input type="hidden" asp-for="FileName" value="test"/>
            <input type="hidden" asp-for="FileType" value="test"/>
            <div class="col-md-12">
                <div class="form-floating">
                    <input asp-for="Title" type="text" class="form-control" placeholder="Header">
                    <label asp-for="Title">Header</label>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-floating">
                    <textarea asp-for="Category.Name" type="text" class="form-control" placeholder="Category.Name"></textarea>
                    <label asp-for="Category.Name">Category.Name</label>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-floating">
                    <input asp-for="Photo" accept="image/*" type="file" class="form-control" placeholder="Photo">
                </div>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary">Submit</button>
                <button type="reset" class="btn btn-secondary">Reset</button>
            </div>
        </form><!-- End floating Labels Form -->

    </div>
</div>

